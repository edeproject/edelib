SubDir TOP test ;

# shared library requires linkage with FLTK and sound libraries
if $(SHARED) {
	ADDONLIB = $(FLTKLIBS) $(SOUNDLIBS) ;
}

MakeTest run_tests : UnitTest.cpp 
					utest.cpp 
					util.cpp
					strutil.cpp 
					file.cpp
					directory.cpp
					datetime.cpp
					conf.cpp
					desktopfile.cpp
					string.cpp
					list.cpp
					regex.cpp
					color.cpp
					xml.cpp
					mime.cpp
					run_tests.cpp
					: 
					$(ADDONLIB) $(FLTKLIBS) ;

#MakeTest url : url.cpp ;
#MakeTest pp : pp.cpp ;
#MakeTest perf/stringtok : perf/stringtok.cpp ;

Clean clean : [ FFileName $(TOP) test .foo.txt ] ;
Clean clean : [ FFileName $(TOP) test .ede.conf ] ;

# include examples directory
SubInclude TOP test examples ;
