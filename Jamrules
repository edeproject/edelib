	$(TOP)/edelib/_conf.h 
	$(TOP)/edelib/Version.h 
	$(TOP)/po/update-messages.sh
	$(JCACHEFILE)
	$(HCACHEFILE) ;

Cleandir distclean : $(TOP)/autom4te.cache ;
