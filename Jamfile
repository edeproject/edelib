SubDir TOP ;

InstallDirectory [ FDirName $(includedir) ] : [ FDirName $(TOP) edelib ] ;
InstallFile      [ FDirName $(libdir) pkgconfig ] : [ FFileName $(TOP) edelib.pc ] ;
InstallFile      [ FDirName $(libdir) pkgconfig ] : [ FFileName $(TOP) edelib-gui.pc ] ;
InstallFile      [ FDirName $(libdir) pkgconfig ] : [ FFileName $(TOP) edelib-gui-no-images.pc ] ;

if $(DBUS_LIBS) {
	InstallFile [ FDirName $(libdir) pkgconfig ] : [ FFileName $(TOP) edelib-dbus.pc ] ;
}

SubInclude TOP src ;
SubInclude TOP sslib ;
SubInclude TOP test ;
SubInclude TOP examples ;
SubInclude TOP doc ;
SubInclude TOP tools ;
SubInclude TOP po ;
