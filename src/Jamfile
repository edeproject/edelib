SubDir TOP src ;

XDGMIME_SRC_OLD = 
	xdgmime.c 
	xdgmimeglob.c 
	xdgmimeint.c 
	xdgmimemagic.c 
	xdgmimealias.c 
	xdgmimeparent.c 
	xdgmimecache.c ;

XDGMIME_SRC = 
	xdgmime.c
	xdgmimealias.c
	xdgmimecache.c
	xdgmimeglob.c
	xdgmimeicon.c
	xdgmimeint.c
	xdgmimemagic.c
	xdgmimeparent.c ;

XDGMIME = xdgmime/$(XDGMIME_SRC) ;

LibraryObjectCcFlags $(XDGMIME) : $(XDG_MIME_HAVE_MMAP) ;

SOURCE = 
	Missing.c
	Config.cpp 
	Resource.cpp
	DesktopFile.cpp
	StrUtil.cpp
	Util.cpp
	Nls.cpp
	String.cpp
	File.cpp
	DateTime.cpp
	Directory.cpp
	Debug.cpp 
	IconTheme.cpp 
	Color.cpp 
	Run.cpp 
	Listener.cpp
	Sipc.cpp
	TiXml.cpp
	TiXmlParser.cpp 
	MimeType.cpp
	rx/regex.c
	Regex.cpp
	Pty.cpp
	PtyProcess.cpp
	$(XDGMIME) ;

SOURCE_GUI = 
	DirWatch.cpp
	XSettingsCommon.cpp
	XSettingsClient.cpp
	XSettingsManager.cpp
	Window.cpp
	WindowXid.cpp
	ExpandableGroup.cpp
	IconLoader.cpp
	IconChooser.cpp 
	FontChooser.cpp
	MessageBox.cpp
	SevenSeg.cpp
	TableBase.cpp ;

SOURCE_DBUS = 
	EdbusConnection.cpp 
	EdbusData.cpp
	EdbusDict.cpp
	EdbusError.cpp
	EdbusList.cpp
	EdbusMessage.cpp
	EdbusObjectPath.cpp ;


if $(FLTK_LIBS) {
	LibraryObjectC++Flags $(SOURCE_GUI) : $(FLTK_CFLAGS) ;
	SOURCE += $(SOURCE_GUI) ;
} else {
	Echo "...building without FLTK support..." ;
}

# libedelib
MakeLibrary $(EDELIB_NAME) : $(SOURCE) ;

# libedelib_dbus
if $(DBUS_LIBS) {
	LibraryObjectC++Flags $(SOURCE_DBUS) : $(DBUS_CFLAGS) $(FLTK_CFLAGS) ;
	MakeLibrary $(EDELIB_DBUS_NAME) : $(SOURCE_DBUS) ;
}
