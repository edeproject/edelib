}

for i in $(HEADERS)     { InstallFile $(EDELIB_INCLUDE_DIR) : $(i) ; }
for i in $(HEADERS_GUI) { InstallFile $(EDELIB_INCLUDE_DIR) : $(i) ; }
for i in $(HEADERS_TS)  { InstallFile [ FDirName $(EDELIB_INCLUDE_DIR) ts ] : $(i) ; }
