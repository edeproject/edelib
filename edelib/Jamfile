EDELIB_INCLUDE_DIR = [ FDirName $(includedir) edelib ] ;

if $(DBUS_LIBS) {
	HEADERS_DBUS =
		EdbusConnection.h
		EdbusContainer.h
		EdbusData.h
		EdbusDict.h
		EdbusError.h
		EdbusList.h
